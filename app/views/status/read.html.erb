<%= image_tag("wreckbunny.png", id: "wreck") %>

<script type="text/javascript">
$(function() {
	$('#bunny').hover(function (event) {
  		var origsrc = $(this).attr('src');
        var src = '';
        if (origsrc == '/images/bunny.png') src = '/images/bunnyevil.png';
        if (origsrc == '/images/bunnyevil.png') src = '/images/bunny.png';
        $(this).attr('src', src);
	});
	$('#bunmap').click(function (event) {
		$("#wreck").css("top", -455);
		$("#wreck").animate({top:0},1000).delay(500).animate({top:-455},1000);
	});
});
</script>